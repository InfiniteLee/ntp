{
  "version": "1.0.0",
  "author": "Tino Vyatkin <tino@vtkn.io>",
  "devDependencies": {
    "@destinationstransfers/eslint-config": "^1.0.2",
    "eslint": "^4.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "jest": "^21.2.1",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-consistent": "^2.0.1",
    "remark-preset-lint-recommended": "^3.0.1"
  },
  "engines": {
    "node": ">=8"
  },
  "description": "Lightweight Node implementation of the NTP Client Protocol",
  "files": [
    "index.js"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/destinationstransfers/ntp.git"
  },
  "homepage": "https://github.com/destinationstransfers/ntp#readme",
  "bugs": {
    "url": "https://github.com/destinationstransfers/ntp/issues"
  },
  "scripts": {
    "test": "jest"
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true,
    "bail": true
  },
  "eslintConfig": {
    "plugins": [
      "node"
    ],
    "extends": [
      "@destinationstransfers",
      "plugin:node/recommended"
    ],
    "env": {
      "node": true
    },
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prefer-object-spread/prefer-object-spread": "off"
    }
  }
}
